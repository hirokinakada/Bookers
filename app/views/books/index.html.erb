<div class="body" style="margin-top:51px;">

<div class="container">

<p id="notice"><%= notice %></p>
<div class="row">

<% if @book.errors.any? %>
<div>
	<h2 style="color: red">2 errors prohibited this book from begin saved:</h2>
    <ul style="color: red">
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
</div>
<% end %>

<div class="container">
	<p =id><%= notice %></p>
	<div class="row">
		<div class="col-xs-3">
			<%= render 'users/list', userpro: @userpro %>
			<%= render 'books/list', booknew: @booknew %>
		</div>

<div class="col-xs-9">


<h1>Books</h1>
<table class="table table-hover table-inverse">
	<thead>
	<tr>
		<th></th>
		<th>Title</th>
		<th>Opinion</th>
		<th colspan="3"></th>
	</tr>
	</thead>
	<tr>
		<% @books.each do |book| %>
		<td>
			<%= link_to user_path(book.user_id) do %>
		<%#= attachment_image_tag @user, :profile_image, :fill, 70, 70, fallback: "no_image.jpg"%>
			<%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg"%><% end %></td>
			<td><%= link_to book.title, book_path(book.id) %>
			</td>
		<td><%= book.body %></td>
</tr>
<% end %>
</table>

</div>
	</div>
</div>
</div>
</div>
</div>

